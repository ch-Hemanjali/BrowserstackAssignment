<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="browser" parallel="tests" thread-count="5">
    <test name="Test on Chrome Desktop">
        <parameter name="browser" value="chrome"/>
        <parameter name="browser_version" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="10"/>
        <classes>
            <class name="com.BrowserstackAssignment.browser"/>
        </classes>
    </test>
    <test name="Test on Firefox Desktop">
        <parameter name="browser" value="firefox"/>
        <parameter name="browser_version" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="10"/>
        <classes>
            <class name="com.BrowserstackAssignment.browser"/>
        </classes>
    </test>
    <test name="Test on Safari Desktop">
        <parameter name="browser" value="safari"/>
        <parameter name="browser_version" value="latest"/>
        <parameter name="os" value="OS X"/>
        <parameter name="os_version" value="Mojave"/>
        <classes>
            <class name="com.BrowserstackAssignment.browser"/>
        </classes>
    </test>
    <test name="Test on iPhone">
        <parameter name="browser" value="iPhone"/>
        <parameter name="browser_version" value="latest"/>
        <parameter name="os" value="iOS"/>
        <parameter name="os_version" value="14"/>
        <classes>
            <class name="com.BrowserstackAssignment.browser"/>
        </classes>
    </test>
    <test name="Test on Android">
        <parameter name="browser" value="android"/>
        <parameter name="browser_version" value="latest"/>
        <parameter name="os" value="Android"/>
        <parameter name="os_version" value="11"/>
        <classes>
            <class name="com.BrowserstackAssignment.browser"/>
        </classes>
    </test>
</suite>
